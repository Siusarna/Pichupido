{
  "name": "pichupido",
  "version": "1.0.0",
  "description": "Pichupido system - it is web application that will help restaurant create their \r own page with unique design, menu, order system, \r possibility to pay online, call a waiter and feedback system.",
  "main": "index.js",
  "engines": {
    "node": "12.16.1",
    "npm": "6.14.8"
  },
  "scripts": {
    "test": "jest .",
    "start": "node --max_old_space_size=2560 build/src/server.js",
    "serve": "tsnd --respawn --no-notify --transpile-only src/server.ts",
    "lint": "eslint . --ext .ts",
    "lint-fix": "eslint . --ext .ts --fix",
    "build": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Siusarna/Pichupido.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Siusarna/Pichupido/issues"
  },
  "homepage": "https://github.com/Siusarna/Pichupido#readme",
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@types/koa__cors": "^3.0.2",
    "@types/passport-local": "^1.0.33",
    "@types/pg": "^7.14.5",
    "@types/uuid": "^8.3.0",
    "aws-sdk": "^2.781.0",
    "axios": "^0.21.0",
    "config": "^3.3.2",
    "jimp": "^0.16.1",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.0",
    "koa-body": "^4.2.0",
    "koa-helmet": "^6.0.0",
    "koa-joi-router": "^6.0.2",
    "koa-joi-router-docs": "^1.2.1",
    "koa-logger": "^3.2.1",
    "koa-passport": "^4.1.3",
    "koa2-swagger-ui": "^5.0.2",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.4.1",
    "pino": "^6.7.0",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@types/config": "0.0.36",
    "@types/koa": "^2.11.4",
    "@types/koa-helmet": "^5.2.0",
    "@types/koa-joi-router": "^5.2.4",
    "@types/koa-joi-router-docs": "^1.0.0",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-passport": "^4.0.2",
    "@types/passport-jwt": "^3.0.3",
    "@types/pino": "^6.3.2",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "eslint": "^7.11.0",
    "jest": "^26.4.2",
    "supertest": "^5.0.0",
    "ts-jest": "^26.4.1",
    "ts-node-dev": "^1.0.0-pre.63",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ],
    "collectCoverage": false,
    "collectCoverageFrom": [
      "**/*.{ts,js}",
      "!**/node_modules/**",
      "!**/build/**",
      "!**/coverage/**",
      "!**/migrations/**",
      "!**/config/**"
    ],
    "transform": {
      "\\.ts$": "ts-jest"
    },
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 90,
        "lines": 0,
        "statements": 0
      }
    },
    "coverageReporters": [
      "text",
      "text-summary"
    ],
    "testRegex": "\\.unit.ts",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/",
      "/coverage/"
    ]
  }
}
